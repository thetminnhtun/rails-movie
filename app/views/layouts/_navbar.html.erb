<div class="bg-zinc-500 text-white relative">
    <div class="flex justify-between max-w-7xl mx-auto h-[160px] pt-[40px]">
        <!-- Logo & brand -->
        <div class="flex space-x-2">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 28 28">
                    <path id="Exclusion_1" data-name="Exclusion 1" d="M18,28H5a5.006,5.006,0,0,1-5-5V10A10.011,10.011,0,0,1,10,0H23a5.006,5.006,0,0,1,5,5V18A10.011,10.011,0,0,1,18,28ZM10.621,8a1.16,1.16,0,0,0-.772.29,1.088,1.088,0,0,0-.35.832v9.753a1.122,1.122,0,0,0,1.7.968l8.251-4.875a1.124,1.124,0,0,0,0-1.936L11.2,8.153A1.13,1.13,0,0,0,10.621,8Z" fill="#fff"/>
                </svg>
            </div>
            <div class="font-bold">
                MTM Movie
            </div>
        </div>
        <!-- Menu -->
        <div class="">
            <ul class="flex space-x-3">
                <li class="hover:text-gray-300 <%= 'underline underline-offset-4' if current_page?(root_path) || current_page?(movies_path) %>">
                    <%= link_to "Home", root_path %>
                </li>
                <li class="hover:text-gray-300 <%= 'underline underline-offset-4' if current_page?(new_movie_path) %>">
                    <%= link_to "Create Movie", new_movie_path %>
                </li>
                <li class="hover:text-gray-300 <%= 'underline underline-offset-4' if current_page?(new_movie_path) %>">
                    <%= link_to "User", new_movie_path %>
                </li>
                <li class="hover:text-gray-300 <%= 'underline underline-offset-4' if current_page?(new_movie_path) %>">
                    <%= link_to "Login", new_movie_path %>
                </li>
                <li class="hover:text-gray-300 <%= 'underline underline-offset-4' if current_page?(new_movie_path) %>">
                    <%= link_to "Logout", new_movie_path %>
                </li>
            </ul>
        </div>
    </div>

    <!-- Search -->
    <div class="absolute w-1/3 left-0 right-0 mx-auto bottom-[-50px] shadow">
        <%= form_tag(movies_path, method: :get, class: 'text-white w-full') do %>
            <div class="relative">
                <%= text_field_tag(:search, params[:search],
                placeholder: "Search movie...",
                class: "w-full bg-zinc-700 p-4 rounded-lg focus:ring-white focus:border-white") 
                %>
                <button type="submit">
                    <svg class="absolute top-[17px] right-3 w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                    </svg>              
                </button>
            </div>
        <% end %>
    </div>
</div>

