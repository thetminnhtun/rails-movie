<div class="max-w-lg pt-10 mx-auto">
  <h2 class="text-4xl font-bold my-5">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash[:alert].present? %>
      <p class="text-red-500 mb-5"><%= flash[:alert] %></p>
    <% end %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full bg-zinc-700 py-2 px-3 rounded-lg focus:ring-white focus:border-white" %>
    </div>
    <div class="field mt-5">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-2 w-full bg-zinc-700 py-2 px-3 rounded-lg focus:ring-white focus:border-white" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field mt-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions mt-5">
      <%= f.submit "Log in", class: "w-full bg-zinc-700 px-3 py-3 rounded-lg cursor-pointer hover:bg-zinc-800" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
