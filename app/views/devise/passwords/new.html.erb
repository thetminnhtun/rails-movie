<div class="max-w-lg pt-10 mx-auto">
  <h2 class="text-4xl font-bold my-5">Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full bg-zinc-700 py-2 px-3 rounded-lg focus:ring-white focus:border-white" %>
    </div>
    <div class="actions mt-5">
      <%= f.submit "Send me reset password instructions", class: "w-full bg-zinc-700 px-3 py-3 rounded-lg cursor-pointer hover:bg-zinc-800" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
