<div class="max-w-lg pt-10 mx-auto">
  <h2 class="text-4xl font-bold my-5">Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mt-2 w-full bg-zinc-700 py-2 px-3 rounded-lg focus:ring-white focus:border-white" %>
    </div>
    <div class="field mt-5">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full bg-zinc-700 py-2 px-3 rounded-lg focus:ring-white focus:border-white" %>
    </div>
    <div class="actions mt-5">
      <%= f.submit "Change my password", class: "w-full bg-zinc-700 px-3 py-3 rounded-lg cursor-pointer hover:bg-zinc-800" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
